# Names of modules that can be compiled with docker-php-ext-install

bcmath - compile
bz2 - libbz2-dev
calendar - compile
dba - compile
enchant - compile; libenchant-2-dev
exif - compile
gd - compile ; possible libjpeg-dev, and libpng-dev
gettext - compile
gmp - libgmp-dev
imap - compile; libc-client-dev , libkrb5-dev
intl - compile ; libicu-dev
ldap - compile; libldap2-dev
mysqli - compile
odbc -  NO LUCK
opcache - compile 
pcntl -  compile
pdo - compile
pdo_dblib - freetds-dev, NO LUCK
pdo_mysql - compile
pdo_odbc - NO LUCK
pgsql - NO LUCK
pspell - libpspell-dev
shmop - compile
simplexml - libxml2-dev
snmp - libsnmp-dev
soap - compile
sockets - compile
tidy -libtidy-dev
xsl - libxslt1-dev
zip - libzip-dev
